# install Pytho 
sudo apt update
sudo apt install python3

# to run python file
python3 --version
python3 yourfileName.py

# to install Tkinter Library
sudo apt install python3-tk

-----------------------------------------------------

# install Java
sudo apt install openjdk-17-jdk

# To run java file
java --version
javac fileName.java
java fileName

